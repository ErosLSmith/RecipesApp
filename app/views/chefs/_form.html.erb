<div class="row">
	<div class="well col-md-8 col-md-offset-2">
		<%= form_for @chef do |f| %>
		<%= f.label :chefname %>
		<%= f.text_field :chefname %>
		
		<%= f.label :email %>
		<%= f.email_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<span class="picture">
			<%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png, image/jpeg' %>
		</span>

		<%= f.submit @submit_button_text , class: "btn btn-success"%>
		<% end %>
	</div>	
</div>

<script type="text/javascript">
	$('#chef_picture').bind('change', function () {
		size_in_megabytes = this.files[0].size/1024/1024;
		if (size_in_megabytes > 5) {
			alert('Max file size allowed is 5MB');
		}
	});
</script>